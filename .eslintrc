{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "globalReturn": true,
      "impliedStrict": true,
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [2, "single"], 
    "semi": [2, "always"],
    "comma-dangle": [2, "always"],
    "one-var": [2, "never"],
    "no-var": [2],
    "prefer-const": [2],
    "no-use-before-define": [2, "nofunc"],
    "react/jsx-filename-extension": [0],
    "react/forbid-prop-types": [0],
    "react/no-array-index-key": [1],
    "no-trailing-spaces": [1]
  }
}